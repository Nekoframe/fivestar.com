{# Modal #}

{% for gallery in craft.entries.section("galleryList").all() %}

<div class="modal fade gallery__modal" id="gallery{{ gallery.id }}" tabindex="-1" role="dialog" aria-labelledby="gallery" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header gallery__modal__head">
        <h5 class="modal-title gallery__modal__title" id="gallery_title">{{ gallery.galleryCategory.label }} - {{ gallery.title }}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label=" Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body gallery__modal_content">
        

        <div id="image-slide{{ gallery.id }}" class="carousel slide" data-ride="carousel">
		  <div class="carousel-inner">

			{% for image in gallery.images.all() %}
				{% if loop.index == 1 %}
					<div class="carousel-item active">
						<img class="d-block w-100" src="{{ image.getUrl('landscape') }}" alt="{{ image }}">
					</div>
				{% else %}
					<div class="carousel-item">
						<img class="d-block w-100" src="{{ image.getUrl('landscape') }}" alt="{{ image }}">
					</div>
				{% endif %}
			{% endfor %}
		  </div>

		  <a class="carousel-control-prev" href="#image-slide{{ gallery.id }}" role="button" data-slide="prev">
		    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
		    <span class="sr-only">Previous</span>
		  </a>
		  <a class="carousel-control-next" href="#image-slide{{ gallery.id }}" role="button" data-slide="next">
		    <span class="carousel-control-next-icon" aria-hidden="true"></span>
		    <span class="sr-only">Next</span>
		  </a>
		</div>

      </div>
    </div>
  </div>
</div>
{% endfor %}